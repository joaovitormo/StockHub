<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do Produto"
        android:textSize="25sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginBottom="0dp"

        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SKU: "
            android:textSize="18sp"
            android:layout_marginLeft="10dp"

            />
        <TextView
            android:id="@+id/txtProductID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID do Produto"
            android:textSize="18sp"
            android:layout_marginLeft="0dp"
            />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginBottom="0dp"

        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantidade: "
            android:textSize="18sp"
            android:layout_marginLeft="10dp"

            />
        <TextView
            android:id="@+id/txtAmountValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Value nAmount"
            android:textSize="18sp"

            />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginBottom="0dp"

        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marca: "
            android:textSize="18sp"
            android:layout_marginLeft="10dp"

            />
        <TextView
            android:id="@+id/txtBrandValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Value nAmount"
            android:textSize="18sp"

            />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginBottom="0dp"

        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoria: "
            android:textSize="18sp"
            android:layout_marginLeft="10dp"

            />
        <TextView
            android:id="@+id/txtCategoryValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Value nAmount"
            android:textSize="18sp"

            />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginBottom="10dp"

        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posição de estoque: "
            android:textSize="18sp"
            android:layout_marginLeft="10dp"

            />
        <TextView
            android:id="@+id/txtPositionValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Value nAmount"
            android:textSize="18sp"

            />
    </LinearLayout>


</LinearLayout>